# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://mindnote:secure_password@prod-db.example.com:5432/mindnote_production
POSTGRES_USER=mindnote
POSTGRES_PASSWORD=secure_production_password
POSTGRES_DB=mindnote_production

# Redis Configuration
REDIS_URL=redis://prod-redis.example.com:6379
REDIS_PASSWORD=secure_redis_production_password

# Authentication Configuration
NEXTAUTH_URL=https://mindnote.com
NEXTAUTH_SECRET=production-secret-key-at-least-32-characters-long-and-secure

# AI Service Configuration
OPENAI_API_KEY=your-production-openai-api-key
ANTHROPIC_API_KEY=your-production-anthropic-api-key
AI_MODEL_DEFAULT=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
AI_TIMEOUT=60000

# Monitoring and Logging
LOG_LEVEL=warn
LOG_FORMAT=json
ENABLE_MONITORING=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=7200
ENABLE_COMPRESSION=true

# Security Configuration
CORS_ORIGIN=https://mindnote.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true

# External Services
WEBHOOK_URL=https://mindnote.com/api/webhooks
EMAIL_FROM=noreply@mindnote.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true