{
  "name": "mindnote",
  "version": "0.1.0",
  "private": true,
  "description": "智能笔记应用 - AI-powered note-taking application",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:unit": "vitest run src/**/__tests__/",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "vitest run tests/e2e/",
    "test:ui:components": "./tests/ui/scripts/run-ui-tests.sh --components",
    "test:ui:ai": "./tests/ui/scripts/run-ui-tests.sh --ai-components",
    "test:ui:all": "./tests/ui/scripts/run-ui-tests.sh --all",
    "test:ui:coverage": "./tests/ui/scripts/run-ui-tests.sh --coverage --report",
    "test:ui:watch": "./tests/ui/scripts/run-ui-tests.sh --watch",
    "test:ui:ci": "./tests/ui/scripts/run-ui-tests.sh --ci --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:ui:all",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:apply": "tsx scripts/database-migration.ts apply",
    "db:migrate:rollback": "tsx scripts/database-migration.ts rollback",
    "db:migrate:status": "tsx scripts/database-migration.ts status",
    "db:migrate:validate": "tsx scripts/database-migration.ts validate",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed-enhanced": "tsx prisma/seed-enhanced.ts",
    "db:seed:dev": "./scripts/seed-manager.sh run -e development",
    "db:seed:test": "./scripts/seed-manager.sh run -e test --notes 20",
    "db:seed:reset": "./scripts/seed-manager.sh reset",
    "db:seed:validate": "./scripts/seed-manager.sh validate",
    "db:seed:stats": "./scripts/seed-manager.sh stats",
    "db:seed:export": "./scripts/seed-manager.sh export -o ./seed-export.json",
    "vector:install": "./scripts/vector-setup.sh install",
    "vector:check": "./scripts/vector-setup.sh check",
    "vector:setup": "./scripts/vector-setup.sh setup",
    "vector:index": "./scripts/vector-setup.sh index",
    "vector:reindex": "./scripts/vector-setup.sh reindex",
    "vector:stats": "./scripts/vector-setup.sh stats",
    "db:init": "./scripts/init-database.sh init",
    "db:reset": "./scripts/init-database.sh reset",
    "db:health": "./scripts/database-health-check.sh full",
    "db:health:report": "./scripts/database-health-check.sh report",
    "db:info": "./scripts/init-database.sh info",
    "security:scan": "./scripts/security/run-security-scan.sh",
    "security:quick": "./scripts/security/run-security-scan.sh --quick",
    "security:full": "./scripts/security/run-security-scan.sh --full",
    "security:deps": "./scripts/security/run-security-scan.sh --dependencies",
    "security:code": "./scripts/security/run-security-scan.sh --code",
    "security:config": "./scripts/security/run-security-scan.sh --config",
    "security:secrets": "./scripts/security/run-security-scan.sh --secrets",
    "security:ci": "./scripts/security/run-security-scan.sh --full --severity high --fail-on-error"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.37",
    "@ai-sdk/openai": "^2.0.53",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "ai": "^5.0.78",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "immer": "^10.1.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.547.0",
    "next": "15.0.0",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "openai": "^6.7.0",
    "pgvector": "^0.2.1",
    "prisma": "^5.22.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.53.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.7.2",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write",
      "npm run lint"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "ai",
    "notes",
    "productivity",
    "typescript",
    "nextjs",
    "react"
  ],
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ]
  },
  "author": "MindNote Team",
  "license": "MIT"
}
